{
  "name": "react-hooks-window-size",
  "version": "0.3.0",
  "description": "A react hooks approach to window resize events",
  "repository": "https://github.com/garth/react-hooks-window-size.git",
  "author": "Garth Williams",
  "license": "MIT",
  "keywords": [
    "react",
    "window",
    "size",
    "resize",
    "hooks"
  ],
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prebuild": "rimraf lib && rimraf es",
    "build:lib": "tsc --outDir lib --target es5 --preserveWatchOutput --downlevelIteration",
    "build:es": "tsc --outDir es --module es2015 --preserveWatchOutput",
    "build": "npm run build:lib & npm run build:es",
    "lint": "eslint \"src/**/*.{ts,tsx}\" && tsc -p tsconfig.json --noEmit --skipLibCheck",
    "prettier": "prettier --write \"src/**/*.{js,json,ts,tsx,scss,html}\""
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxBracketSameLine": true
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "tslib": "^2.5.0"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "volta": {
    "node": "18.16.0"
  }
}
